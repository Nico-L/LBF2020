<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content= "le site de l'atelier de la Bonne Fabrique" />
        <link rel="icon" type="image/png" href="/images/favicon.png" />
        <link rel="stylesheet" href="/css/styles.css">
        <title>{{ title }}</title>
        {% include "social.njk" %}
    </head>
    <body class="bg-bleuLBFTT w-full">
        <div class="flex flex-col 2xl:flex-row items-center">
            <div class="z-10 bg-white flex flex-row w-full justify-between p-1 content-center items-center sticky top-0 2xl:hidden" id="bandeau">
                <img src="/images/logos/logoHexagoneSeul.svg" class="h-10 w-10 flex-grow-0" />
                <div class="text-lg font-medium">{{article.titre}}</div>
                <div class="flex-grow-0">
                    <input class="hidden" type="checkbox" id="menu-toggle" />
                    <label for="menu-toggle" >
                        <div id="nav-icon">
                            <div></div>
                        </div>
                    </label>
                    <div class="max-w-1/2 hidden shadow-md rounded px-2 bg-white font-medium absolute right-0" id="menu">
                        {%- include "components/menu.njk" -%}
                    </div>
                </div>
            </div>
            <div class="z-10 hidden 2xl:inline max-w-2/6 bg-white border border-lbfbleu-800 font-medium fixed top-4 left-10 rounded-xl p-2">
            <img src="/images/logos/logoLBFtransparent.png" class="flex-grow-0 mx-auto w-full" />
                {%- include "components/menu.njk" -%}
            </div>
            <div class="mt-18 mx-auto w-full max-w-1024px bg-white" id="bobby">
                {# include content #}
                {{ content | safe }}
            </div>
        </div>
        {% block scripts %}
        {% endblock %}
        <script>
            var prevScrollpos = window.pageYOffset;
            window.onscroll = function() {
            var currentScrollPos = window.pageYOffset;
            if (prevScrollpos > currentScrollPos) {
                document.getElementById("bandeau").style.top = "0";
            } else {
                document.getElementById("bandeau").style.top = "-50px";
            }
            prevScrollpos = currentScrollPos;
            }
        </script>
    </body>
</html>