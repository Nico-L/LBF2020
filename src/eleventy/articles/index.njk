---
title: Liste des articles du site
layout: indexLBF
---

<div class="flex flex-col p-2 max-w-720px">
    {%- for article in lesArticles -%}
    <a href="/articles/{{ article.titre | slug }}/" class="p-2 mb-2 rounded-md border border-lbfbleu-700 cursor-pointer">
        <div class="flex flex-row flex wrap gap-2 mb-2">
            {%- if article.tags_articles.length > 0 -%}
                {%- for tag in article.tags_articles -%}
                    <div class="border-2 border-bleuLBF bg-bleuLBF text-gray-900 text-xs font-medium rounded-full px-1">{{tag.tag}}</div>
                {%- endfor -%}
            {%- endif -%}
        </div>
        <div class="px-2 mb-2 hidden md:block">
            <h5>{{article.titre}}</h5>
        </div>
        <div class="flex flex-row divide-x divide-bleuLBFT justify-between" }>
            <div class="pr-2 flex-shrink-0 text-gray-700 w-100px flex items-center">
                {% imageCarreBackground article.banniere.media.url, 80 %}
            </div>
            <div class="p-2 flex-grow">
                <h5 class="ml-2 md:hidden">{{article.titre}}</h5>
                {%- if article.chapeau !== "<p><br></p>" -%}
                    <div class="text-base hidden md:block">{{article.chapeau | safe }}</div>
                {%- endif -%}
            </div>
        </div>
        {%- if article.chapeau !== "<p><br></p>" -%}
            <div class="text-sm mt-2 md:hidden">{{article.chapeau | safe }}</div>
        {%- endif -%}
        <div class="flex flex-row text-xs gap-2 justify-end mt-2">
            <div class="flex flex-row">
                <div class="font-medium text-center text-bleuLBF flex flex-row flex-wrap mr-1">Publié le : </div>
                <div>{{article.updated_at | shortDate}}</div>
            </div>
            <div class="flex flex-row">
                <div class="font-medium text-bleuLBF flex flex-row flex-wrap mr-1">Dernière mise à jour : </div>
                <div>{{article.updated_at | shortDate}}</div>
            </div>
        </div>
    </a>
    
    {%- endfor -%}
</div>
